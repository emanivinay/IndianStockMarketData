<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="User" table="users">
		<meta attribute="desription">Class for our app users</meta>
		<id name="id" column="user_id" type="long">
			<generator class="native"></generator>
		</id>
		<property name="passwordHash" column="password_hash" type="string" not-null="true" />
		<property name="passwordSalt" column="password_salt" type="string" not-null="true" />
		<property name="username" column="username" type="string" unique="true" not-null="true" />
		<property name="dateCreated" column="date_created" type="timestamp" not-null="true" />
	</class>
</hibernate-mapping>